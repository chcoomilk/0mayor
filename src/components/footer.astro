---
import { Icon } from "astro-icon";
import HeroImage from "~/components/hero-image.astro";
import type { FooterLink } from "~/types";

const links: Array<FooterLink> = [
  {
    url: "https://wa.me/628128028182",
    description: "WhatsApp Contact Number",
    icon: "mdi:whatsapp",
  },
  {
    url: "https://facebook.com",
    description: "Facebook Store Page",
    icon: "mdi:facebook",
  },
  {
    url: "https://instagram.com",
    description: "Instagram Store Page",
    icon: "mdi:instagram",
  },
];
---

<footer class="relative flex h-96 items-center justify-center">
  <div class="absolute inset-0 overflow-hidden opacity-30">
    <HeroImage />
  </div>
  <ul class="relative grid grid-flow-col gap-4">
    {
      links.map((link) => (
        <li>
          <a
            class="flex h-16 w-16 items-center justify-center rounded-full border-2 border-current p-4"
            href={link.url}
          >
            <span class="sr-only">{link.description}</span>
            <Icon class="h-full" name={link.icon} />
          </a>
        </li>
      ))
    }
  </ul>
</footer>
